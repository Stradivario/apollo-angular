{
  "name": "apollo-angular",
  "version": "0.13.2",
  "description": "Angular client for Apollo",
  "main": "build/bundles/apollo.umd.js",
  "module": "build/src/index.js",
  "jsnext:main": "build/src/index.js",
  "typings": "./build/src/index.d.ts",
  "author": "Uri Goldshtein <uri.goldshtein@gmail.com> (http://github.com/urigo/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollostack/apollo-angular.git"
  },
  "bugs": {
    "url": "https://github.com/apollostack/apollo-angular/issues"
  },
  "homepage": "https://github.com/apollostack/apollo-angular#readme",
  "scripts": {
    "test": "npm run test-only",
    "posttest": "npm run lint",
    "test-only": "jest",
    "test-watch": "jest --watch",
    "lint": "tslint src/*.ts && tslint tests/*.ts",
    "prebuild": "npm run clean",
    "build": "./node_modules/.bin/ngc -p tsconfig.build.json",
    "postbuild": "npm run bundle",
    "bundle": "rollup -c",
    "clean": "rimraf build/* coverage/*",
    "prepare": "npm run build",
    "commitmsg": "commitlint -e",
    "deploy": "./scripts/deploy.sh"
  },
  "peerDependencies": {
    "@angular/core": "^4.0.0 || ^5.0.0-beta.0",
    "apollo-client": "^1.0.0",
    "rxjs": "^5.0.1"
  },
  "dependencies": {
    "apollo-client-rxjs": "^0.6.0-rc.1"
  },
  "devDependencies": {
    "@angular/animations": "^4.3.6",
    "@angular/common": "^4.3.6",
    "@angular/compiler": "^4.3.6",
    "@angular/compiler-cli": "^4.3.6",
    "@angular/core": "^4.3.6",
    "@angular/http": "^4.3.6",
    "@angular/platform-browser": "^4.3.6",
    "@angular/platform-browser-dynamic": "^4.3.6",
    "@angular/platform-server": "^4.3.6",
    "@commitlint/cli": "^3.1.3",
    "@commitlint/config-angular": "^3.1.1",
    "@types/graphql": "^0.10.2",
    "@types/jest": "^19.2.2",
    "@types/node": "^6.0.59",
    "apollo-client": "^1.9.1",
    "apollo-test-utils": "^0.3.0",
    "graphql": "^0.11.2",
    "graphql-tag": "^2.4.2",
    "husky": "^0.13.0",
    "jest": "^19.0.2",
    "jest-zone-patch": "0.0.6",
    "reflect-metadata": "^0.1.10",
    "remap-istanbul": "^0.9.1",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.4",
    "rxjs": "^5.4.2",
    "ts-jest": "^19.0.9",
    "tslint": "^4.5.1",
    "typescript": "~2.4.2",
    "zone.js": "^0.8.4"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.test.json"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "\\.spec\\.ts$",
    "roots": [
      "<rootDir>/tests"
    ],
    "browser": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json"
    ]
  }
}
